{
  "manifest_version": 3,
  "name": "BotBlocker",
  "version": "1.0",
  "description": "Block potential bot accounts on X (Twitter)",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://x.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {},
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
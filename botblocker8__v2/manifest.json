{
  "manifest_version": 2,
  "name": "BotBlocker",
  "version": "1.0",
  "description": "Blocks bot accounts from appearing in your Twitter feed.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "*://*.x.com/*",
    "storage",
    "cookies"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["*://*.x.com/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}

{
    "manifest_version": 3,
    "name": "BotBlocker",
    "version": "1.0",
    "description": "Block potential bot accounts on Twitter",
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://twitter.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.svg",
        "48":  "images/icon16.svg",
        "128":  "images/icon16.svg"
      }
    },
    "content_scripts": [
      {
        "matches": ["https://twitter.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    }
  }